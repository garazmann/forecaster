{% extends 'base.html.twig' %}

{% block title %}Horal{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Horal říká</h1>

    {% for forecast in forecasts %}
        <p>{{ forecast }}</p>
        
    {% endfor %}

    {% if treshold %} 
        <p>Treshold: {{ treshold }}</p>        
    {% endif %}

    

    <nav>
    <a href="{{ path('app_weather_horalrika', {
        treshold: 11
    })}}">Zkusit znovu.</a>
    </nav>
    {# <p>{{ countryCode }}: {{ city }}</p> #}

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        const route = "{{ url('app_weather_horalrika')|escape('js') }}";
        console.log(route);
    </script>
{% endblock %}
